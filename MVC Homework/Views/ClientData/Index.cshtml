@model IEnumerable<MVC_Homework.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
<p>
    請搜尋客戶名稱:
    @Html.TextBox("keyword")

    <input type="submit" value="Search" />
</p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.NameSortParm, keyword = ViewBag.SearchParm })
        </th>
        <th>
            @Html.ActionLink("統一編號", "Index", new { sortOrder = ViewBag.TaxParm, keyword = ViewBag.SearchParm })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sortOrder = ViewBag.PhonParm, keyword = ViewBag.SearchParm })
        </th>
        <th>
            @Html.ActionLink("傳真", "Index", new { sortOrder = ViewBag.faxParm, keyword = ViewBag.SearchParm })
        </th>
        <th>
            @Html.ActionLink("地址", "Index", new { sortOrder = ViewBag.addrParm, keyword = ViewBag.SearchParm })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.TaxParm, keyword = ViewBag.SearchParm })
        </th>
        <th>
          
        </th>
    
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
