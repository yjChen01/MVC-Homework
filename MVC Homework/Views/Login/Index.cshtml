@model IEnumerable<MVC_Homework.Models.Accounts>

@using X.PagedList;
@using X.PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
@using (Html.BeginForm())
{
<p style="text-align:right">
    @*起始日期：
    @Html.TextBoxFor(model => model.StartDay, new { type = "date" })
    結束日期：
    @Html.TextBoxFor(model => model.EndDate, new { type = "date", @Value = Model.EndDate })
    @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })*@

    <input type="submit" Value="送出查詢" />
    @Html.PagedListPager(Model as IPagedList, (p) => Url.Action("Index", new { pageNo = p }))
</p>
}
<table class="table">
    <tr>
        <th>
            註冊時間
        </th>
        <th>
            使用者姓名
        </th>
        <th>
            使用者密碼
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Registered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
        </tr>
    }

</table>
