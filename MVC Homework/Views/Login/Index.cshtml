@model MVC_Homework.Models.AccountDateManager

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
<p style="text-align:right">
    起始日期：
    @Html.TextBoxFor(model => model.StartDate, new { type = "date" })
    結束日期：
    @Html.TextBoxFor(model => model.EndDate, new { @value=Model.EndDate ,type = "date" })
    <input type="submit" title="送出查詢" />
</p>
}
<CalendarDatePicker x:Name="arrivalCalendarDatePicker" Header="Calendar" />
<table class="table">
    <tr>
        <th>
            註冊時間
        </th>
        <th>
            使用者姓名
        </th>
        <th>
            使用者密碼
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Accounts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Registered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
        </tr>
    }

</table>
